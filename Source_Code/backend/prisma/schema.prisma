// --- USER MODEL ---
model User {
  id            String       @id @default(cuid()) // Menggunakan CUID lebih aman
  email         String       @unique
  name          String?
  image         String?
  
  // Relasi
  teamMembers   TeamMember[]
  auditLogs     AuditLog[]
  
  createdAt     DateTime     @default(now())
}

// --- TEAM MODEL (Pusat B2B & Billing) ---
model Team {
  id                   String       @id @default(cuid())
  name                 String
  slug                 String       @unique
  
  // Billing & AI Usage (Level Tim)
  stripeCustomerId     String?      @unique
  stripeSubscriptionId String?
  plan                 String       @default("Free")
  aiUsageCount         Int          @default(0)
  aiLimitMax           Int          @default(10)

  // Relasi
  members              TeamMember[]
  invitations          Invitation[]
  auditLogs            AuditLog[]
  documents            Document[]

  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

// --- TEAM MEMBER (Junction Table untuk Role) ---
model TeamMember {
  id      String @id @default(cuid())
  role    String @default("MEMBER") // OWNER, ADMIN, MEMBER
  
  userId  String
  teamId  String
  
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  team    Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId]) // Satu user hanya boleh jadi satu member di satu tim
}

// --- AUDIT LOG (Enterprise Requirement) ---
model AuditLog {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  action    String   // "DOC_CREATED", "MEMBER_INVITED", "PAYMENT_SUCCESS"
  details   String?  @db.Text
  ipAddress String?

  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

// --- DOCUMENT (Foundation for RAG/Knowledge Base) ---
model Document {
  id        String   @id @default(cuid())
  teamId    String
  title     String
  content   String   @db.Text
  
  // Untuk AI (Vector Search)
  // Jika pakai pgvector, kolom ini akan menyimpan array angka
  embedding Unsupported("vector(1536)")? 

  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

// --- INVITATION (Fitur B2B) ---
model Invitation {
  id        String   @id @default(cuid())
  email     String
  role      String   @default("MEMBER")
  token     String   @unique
  expires   DateTime
  
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([teamId, email])
}