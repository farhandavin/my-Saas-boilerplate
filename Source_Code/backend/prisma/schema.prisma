// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int       @id @default(autoincrement())
  name                 String
  email                String    @unique
  password             String?
  googleId             String?   @unique
  avatar               String?
  
  // --- BILLING & LIMITS (PENTING) ---
  stripeCustomerId     String?
  stripeSubscriptionId String?
  plan                 String    @default("Free") 
  subscriptionStatus   String    @default("active")
  cancelAtPeriodEnd    Boolean   @default(false) // Tambahan untuk UX billing
  
  // Menyimpan kuota saat ini (agar tidak perlu hitung ulang terus menerus)
  aiUsageCount         Int       @default(0) 
  
  // Relasi
  teams               TeamMember[] // Tim yang diikuti
  ownedTeams          Team[]       @relation("TeamOwner") // Tim yang dimiliki
  
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
}

model Team {
  id          Int          @id @default(autoincrement())
  name        String
  slug        String       @unique // Untuk URL ramah SEO (misal: app.com/team/google)
  ownerId     Int
  owner       User         @relation("TeamOwner", fields: [ownerId], references: [id])
  
  members     TeamMember[]
  invitations Invitation[] // [BARU] Sistem Invite Aman
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  userId    Int
  teamId    Int
  role      String   @default("member") // "owner", "admin", "member"
  
  user      User     @relation(fields: [userId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId]) // Mencegah user masuk tim yang sama 2x
}

// [BARU] Model Undangan (Security Best Practice)
// Mencegah user ditambahkan paksa. Harus via email token.
model Invitation {
  id        String   @id @default(uuid())
  email     String
  teamId    Int
  role      String   @default("member")
  token     String   @unique
  expiresAt DateTime
  
  team      Team     @relation(fields: [teamId], references: [id])
  
  @@unique([email, teamId])
}

// [BARU] Webhook Idempotency (Wajib untuk Stripe)
model WebhookEvent {
  id        String   @id
  createdAt DateTime @default(now())
}