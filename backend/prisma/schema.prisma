generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int          @id @default(autoincrement())
  name                 String
  email                String       @unique
  password             String?
  googleId             String?      @unique
  avatar               String?
  
  // --- PERBAIKAN: KOLOM BILLING DITAMBAHKAN DI SINI ---
  stripeCustomerId     String?
  stripeSubscriptionId String?
  plan                 String       @default("Free") // Default huruf besar 'Free' agar cocok dengan frontend
  subscriptionStatus   String       @default("active")
  cancelAtPeriodEnd    Boolean      @default(false)
  // ----------------------------------------------------

  teams                TeamMember[]
  currentTeamId        Int?      
  
  createdAt            DateTime     @default(now())
  resetToken           String?
  resetTokenExpiry     DateTime?
}

model Team {
  id                   Int          @id @default(autoincrement())
  name                 String
  slug                 String       @unique
  ownerId              Int
  
  // Opsi: Anda bisa menghapus billing dari Team jika billing per-user
  // atau biarkan saja jika nanti ingin fitur 'Team Billing' terpisah.
  // Untuk sekarang kita fokus User Billing agar Dashboard jalan.
  
  members              TeamMember[]
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  userId    Int
  teamId    Int
  role      String   @default("member") 
  user      User     @relation(fields: [userId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])

  @@unique([userId, teamId])
}