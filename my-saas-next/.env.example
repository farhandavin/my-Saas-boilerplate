# =============================================================================
# ENTERPRISE OS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# Run: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# NODE.JS CONFIGURATION
# -----------------------------------------------------------------------------
# Fix for Windows IPv6 DNS resolution issues
NODE_OPTIONS="--dns-result-order=ipv4first"

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# Neon: https://neon.tech/docs/connect/connect-from-any-app
# Supabase: https://supabase.com/docs/guides/database/connecting-to-postgres
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# -----------------------------------------------------------------------------
# AUTHENTICATION (Required)
# -----------------------------------------------------------------------------
# Generate secrets: npx auth secret
AUTH_SECRET="your_auth_secret_here"
AUTH_URL="http://localhost:3000"
JWT_SECRET="your_jwt_secret_here"

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS (Required)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_DOCS_URL="http://localhost:3002"

# Multi-tenancy root domain
NEXT_PUBLIC_ROOT_DOMAIN="localhost:3000"

# -----------------------------------------------------------------------------
# PRIVACY LAYER
# -----------------------------------------------------------------------------
PII_MASKING_ENABLED="true"

# -----------------------------------------------------------------------------
# GOOGLE OAUTH (Required for Google Sign-In)
# -----------------------------------------------------------------------------
# Setup: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/google/callback"

# -----------------------------------------------------------------------------
# AI - GOOGLE GEMINI (Required for AI Features)
# -----------------------------------------------------------------------------
# Get API Key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your_google_ai_key"

# -----------------------------------------------------------------------------
# STRIPE BILLING (Required for Payments)
# -----------------------------------------------------------------------------
# Dashboard: https://dashboard.stripe.com/apikeys
# Webhook: stripe listen --forward-to localhost:3000/api/webhooks/stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Stripe Price IDs (create products in Stripe Dashboard)
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID="price_pro_id"
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_id"

# -----------------------------------------------------------------------------
# EMAIL - RESEND (Required for Transactional Emails)
# -----------------------------------------------------------------------------
# Dashboard: https://resend.com/api-keys
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="onboarding@resend.dev"

# -----------------------------------------------------------------------------
# RATE LIMITING - UPSTASH REDIS (Required)
# -----------------------------------------------------------------------------
# Dashboard: https://console.upstash.com/redis
UPSTASH_REDIS_REST_URL="https://your-database.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_token"

# -----------------------------------------------------------------------------
# CRON JOBS SECURITY (Required for Scheduled Tasks)
# -----------------------------------------------------------------------------
# Generate: openssl rand -hex 32
CRON_SECRET="generate_a_random_secret_here"

# -----------------------------------------------------------------------------
# MONITORING - POSTHOG (Optional)
# -----------------------------------------------------------------------------
# Dashboard: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# -----------------------------------------------------------------------------
# ERROR TRACKING - SENTRY (Optional)
# -----------------------------------------------------------------------------
# Dashboard: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
